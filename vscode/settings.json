{
    // Vim plugin notification disabled
    "vim.disableAnnoyingNeovimMessage": true,

    // What to open on startup
    "workbench.startupEditor": "newUntitledFile",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "markdown.preview.fontSize": 9,
    "terminal.integrated.fontSize": 9,
    "terminal.integrated.fontFamily": "Fira Code",

    // vscode-icons plugin stuff
    "workbench.iconTheme": "vscode-icons", 

    // Disable git, I use external tool
    "git.enabled": false,
    "workbench.activityBar.visible": true,

    // JavaScript Standard Style plugin
    "javascript.validate.enable": false,
    "standard.autoFixOnSave": true,

    // Move tabs close button to left
    "workbench.editor.tabCloseButton": "left",
    "editor.minimap.enabled": false,

    // Word wrapping
    "editor.wordWrap": "on",
    "extensions.ignoreRecommendations": false,
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Monokai",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.tabSize": 2,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    // TODO Highlight plugin
    "todohighlight.defaultStyle": {
            "fontStyle": "bold"
    },
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "#ffffff",
            "backgroundColor": "#006466",
            "overviewRulerColor": "#006466",
            "isWholeLine": true
        },
        {
            "text": "FIXME:",
            "color": "#ffffff",
            "backgroundColor": "#91008F",
            "overviewRulerColor": "#91008F",
            "isWholeLine": true
        }
    ],
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.php",
        "**/*.css",
        "**/*.scss",
        "**/*.go",
    ]
}