{
    // Vim plugin notification disabled
    "vim.disableAnnoyingNeovimMessage": true,

    // What to open on startup
    "workbench.startupEditor": "newUntitledFile",

    // Color scheme
    "workbench.colorTheme": "Monokai",

    // Font stuff
    "editor.fontSize": 9,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "markdown.preview.fontSize": 9,
    "terminal.integrated.fontSize": 9,
    "terminal.integrated.fontFamily": "Fira Code",

    // vscode-icons plugin stuff
    "workbench.iconTheme": "vscode-icons", 

    // Disable git, I use external tool
    "git.enabled": false,
    "workbench.activityBar.visible": true,

    // Show some of whitespaces
    "editor.renderWhitespace": "boundary",

    // JavaScript Standard Style plugin
    "javascript.validate.enable": false,
    "standard.autoFixOnSave": true,

    // Move tabs close button to left
    "workbench.editor.tabCloseButton": "left",
    "editor.minimap.enabled": false,

    // Word wrapping
    "editor.wordWrap": "on",
    "extensions.ignoreRecommendations": false,
    "window.zoomLevel": 0
}